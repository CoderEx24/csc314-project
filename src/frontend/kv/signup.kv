<SignupScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            size_hint: (0.7, 0.5)
            orientation: 'vertical'

            
            BoxLayout:
                orientation: 'horizontal'
                
                Label:
                    size_hint_x: 0.2
                    text: "Username"
                
                TextInput:
                    id: username
                    multiline: False

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    size_hint_x: 0.2
                    text: 'Password'

                TextInput:
                    id: password
                    multiline: False
                    password: True

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    size_hint_x: 0.2
                    text: 'Confirm\nPassword'

                TextInput:
                    id: password_confirm
                    multiline: False
                    password: True

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: 'Signup'
                
                Button:
                    text: 'Login'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'login'
                    
                    
