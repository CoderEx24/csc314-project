<Post>:
    anchor_x: 'center'
    anchor_y: 'center'
    
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            Label:
                text: 'Username'

        Label:
            markup: True
            text: "Example\nText\n[b]with[/b]\n[i]markup[/i]"
        
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            
            Button:
                text: 'Like'

            Button:
                text: 'Share'

        TextInput:
            size_hint_y: 0.1

        

