<LoginScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            size_hint: (0.8, 0.5)
            
            orientation: 'vertical'

            TextInput:
            TextInput:
                password: True

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: 'Login'
                
                Button:
                    text: 'Signup'
                    on_press: 
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'signup'

